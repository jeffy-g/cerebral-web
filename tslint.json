{ // want use?: https://github.com/microsoft/tslint-microsoft-contrib
    "rules": {
        "no-single-line-block-comment": false,
        "no-require-imports": true,
        "jsdoc-format": false,
        "no-var-requires": true,
        "quotemark": [true, "double", "single", "avoid-escape", "avoid-template"],
        // "no-suspicious-comment": true,
        "no-relative-imports": false,
        "variable-name": [
            true, "check-format",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case",
            "allow-snake-case"
        ],
        "no-trailing-whitespace": [
            true,
            "ignore-comments",
            "ignore-jsdoc",
            "ignore-template-strings"
        ],

        "callable-types": false, // ?
        "max-line-length": [true, 1500],
        // type definition explicitly (do not use type inference, probably
        "typedef": [
            false,
            "call-signature", "parameter", "member-variable-declaration"
        ],
        "whitespace": [true, "check-branch"/* , "check-operator", "check-typecast" */],
        "newline-before-return": false,
        "trailing-comma": [
            false, {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "prefer-type-cast": false,
        "export-name": false,

        "no-conditional-assignment": false,
        "no-increment-decrement": false,

        // "max-func-body-length": 450,
        "curly": [true, "ignore-same-line"],
        // allow-fast-null-checks:
        // allows to use logical operators to perform fast null checks
        // and perform method or function calls for side effects (e.g. e && e.preventDefault()).
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "max-classes-per-file": [true, 4],

        "no-function-expression": false,
        "no-console": [false, "log", "error"],

        "radix": false,

        "semicolon": [true, "always"],

        "indent": [true, "spaces", 4]
    }
}